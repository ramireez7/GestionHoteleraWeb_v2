{% extends "base.njk" %}

{% block titulo %}Limpiezas | Listado{% endblock %}

{% block contenido %}

  <h1 class="mb-4 text-center">Listado de limpiezas de la habitación {{ habitacion.numero }}</h1>

  <div class="card mb-3 col-12 col-lg-6 m-auto">
    <h5 class="card-header bg-dark text-white">Limpiezas:</h5>
    <div class="card-body bg-light text-center">
      <div class="row">
      {% for limpieza in limpiezas %}
        <div class="m-auto mb-3 text-center">
          <div class="card">
            <div class="card-body">
              <p class="card-text"><strong>Fecha y hora:</strong> {{ limpieza.fechaHora | date('DD/MM/YYYY HH:mm')}}</p>
              {% if limpieza.observaciones %}
                <p class="card-text"><strong>Observaciones:</strong> {{ limpieza.observaciones }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% else %}
        <p class="text-center">No hay limpiezas asociadas a esta habitación.</p>
      {% endfor %}
      </div>
      {% if session and session.usuario %}
        <a class="btn btn-primary" href="/limpiezas/nueva/{{ habitacion.id }}">Registrar limpieza</a>
      {% endif %}
    <div>
  </div>
  
{% endblock %}