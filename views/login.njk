{% extends "base.njk" %}

{% block titulo %}Login{% endblock %}
{% block contenido %}
  <h1 class="text-center">Login</h1>

  {% if (error) %}
    <div class="alert alert-danger m-auto">{{ error }}</div>
  {% endif %}

  <div class="col-lg-4 m-auto">
    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label for="nombre">Usuario:</label>
        <input type="text" class="form-control" name="login" placeholder="Nombre de usuario..."/>
      </div>
      <div class="form-group mt-2 mb-1">
        <label for="password">Contraseña:</label>
        <input type="password" class="form-control" name="password" placeholder="Contraseña..."/>
      </div>
      <button type="submit" class="btn btn-primary" style="margin-top: 10px">Iniciar sesión</button>
    </form>
  </div>
{% endblock %}